{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid main">
    <div class="row">
        <div class="auth">
            <form method="post" class="form-flex">
                <div class="form-group">
                    <input type="tel" class="form-control" name="inphone" placeholder="enter number">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="in" placeholder="enter password">
                </div>
                <div class="form-group">
                    <div class="col-sm-10">
                        <div class="form-check checkbox">
                            <label class="form-check-label">
                                <input type="checkbox" name="_remember_me"> remember me
                            </label>
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <button type="submit" class="btn btn-primary" name="login" id="login">
                        Sign in
                    </button>
                    <a href="{{ path('register_index') }}">
                        Sign up
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}